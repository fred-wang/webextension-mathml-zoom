{
  "manifest_version": 2,
  "name": "MathML Zoom",
  "version": "0.5",
  "description": "Allow zooming mathematical formulas.",
  "author": "Frédéric Wang",
  "homepage_url": "https://github.com/fred-wang/webextension-mathml-zoom",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "css": ["zoom.css"],
      "js": ["zoom.js"],
      "run_at": "document_end"
    }
  ]
}
